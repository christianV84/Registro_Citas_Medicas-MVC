@model Clinica_UPN_V4._3.Medico

@{
    ViewData["Title"] = "Create";
}

<h1>Registro de Nuevo Médico</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Dni" class="control-label">DNI</label>
                <input asp-for="Dni" class="form-control mt-2" />
                <span asp-validation-for="Dni" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Apellidos" class="control-label mt-3">Apellidos</label>
                <input asp-for="Apellidos" class="form-control mt-2" />
                <span asp-validation-for="Apellidos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nombres" class="control-label mt-3">Nombres</label>
                <input asp-for="Nombres" class="form-control mt-2" />
                <span asp-validation-for="Nombres" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaNacimiento" class="mt-3">Fecha Nacimiento</label>
                <input asp-for="FechaNacimiento" class="form-control mt-2" type="date" max="@DateTime.Now.AddYears(-30).ToString("yyyy-MM-dd")" />
                <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telefono" class="control-label mt-3">Teléfono</label>
                <input asp-for="Telefono" class="form-control mt-2" />
                <span asp-validation-for="Telefono" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumColegiatura" class="control-label mt-3">Número Colegiatura</label>
                <input asp-for="NumColegiatura" class="form-control mt-2" />
                <span asp-validation-for="NumColegiatura" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Especializacion" class="control-label mt-3">Especialización</label>
                <select asp-for="Especializacion" class="form-control mt-2">
                    <option value="">Seleccione una opción</option>
                    <option value="Medicina General">Medicina General</option>
                    <option value="Oncología">Oncología</option>
                    <option value="Psicología">Psicología</option>
                    <option value="Cardiología">Cardiología</option>
                    <option value="Dermatología">Dermatología</option>
                    <option value="Pediatría">Pediatría</option>
                    <option value="Ginecología">Ginecología</option>
                    <option value="Geriatría">Geriatría</option>
                    <option value="Gastroenterología">Gastroenterología</option>
                    <option value="Oftalmología">Oftalmología</option>
                </select>
                <span asp-validation-for="Especializacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UsuarioMed" class="control-label mt-3">Usuario</label>
                <input asp-for="UsuarioMed" class="form-control mt-2" />
                <span asp-validation-for="UsuarioMed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Contraseña" class="control-label mt-3">Contraseña</label>
                <input asp-for="Contraseña" class="form-control mt-2" />
                <span asp-validation-for="Contraseña" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary mt-3" />
            </div>
        </form>
    </div>
</div>
<hr />
<div>
    <a asp-action="Index" class="btn btn-success">Regresar a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
