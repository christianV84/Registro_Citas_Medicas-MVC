<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Clinica_UPN_V4._3</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Clinica_UPN_V4._3.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <style>
            .custom-btn {
                color: darkblue; 
                padding-right: 10000px;
                padding-left: 0px;
            }

            .custom-btn.active, .custom-btn:active {
                color: black !important; 
            }

            .custome-btn {
                color: white; 
                padding-right: 5px;
            }

            .custome-btn.active, .custom-btn:active {
                color: antiquewhite !important; 
            }
        </style>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><strong>Clínica UPN</strong></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link btn btn-outline-primary custom-btn m-1" asp-area="" asp-controller="Home" asp-action="Index"><strong>Home</strong></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-outline-primary custom-btn m-1" asp-area="" asp-controller="Administradors" asp-action="Index"><strong>Administradores</strong></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-outline-info custom-btn m-1" asp-area="" asp-controller="Pacientes" asp-action="Index"><strong>Pacientes</strong></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-outline-primary custom-btn m-1" asp-area="" asp-controller="Pacientes1" asp-action="Index"><strong>Administración de Pacientes</strong></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-outline-primary custom-btn m-1" asp-area="" asp-controller="Medicos" asp-action="Index"><strong>Médicos</strong></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-outline-primary custom-btn m-1" asp-area="" asp-controller="Consultorios" asp-action="Index"><strong>Consultorios</strong></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-outline-info custom-btn m-1" asp-area="" asp-controller="Citums" asp-action="Index"><strong>Citas</strong></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-outline-primary custom-btn m-1" asp-area="" asp-controller="Citums1" asp-action="Index"><strong>Administración de Citas</strong></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-outline-danger custome-btn m-1" asp-area="" asp-controller="Administradors" asp-action="Salir"><strong>Cerrar sesión</strong></a>
                        </li>
                        <li class="nav-item" style="padding-right: 0px; padding-left: 320px;">
                            <h5 class="nav-link m-1" asp-area="" asp-controller="" asp-action=""><strong style="color:cornflowerblue;"> Usuario: @TempData["UserName"]</strong></h5>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            <h5><stromg> &copy; Todos los Derechos Reservados de Clínica UPN</stromg></h5>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
