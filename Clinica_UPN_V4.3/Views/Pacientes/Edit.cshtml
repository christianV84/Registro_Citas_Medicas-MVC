@model Clinica_UPN_V4._3.Paciente

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar este registro</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Dni" class="control-label">DNI</label>
                <input asp-for="Dni" class="form-control mt-2" />
                <span asp-validation-for="Dni" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Apellidos" class="control-label mt-3">Apellidos</label>
                <input asp-for="Apellidos" class="form-control mt-2" />
                <span asp-validation-for="Apellidos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nombres" class="control-label mt-3">Nombres</label>
                <input asp-for="Nombres" class="form-control mt-2" />
                <span asp-validation-for="Nombres" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaNacimiento" class="mt-3">Fecha Nacimiento</label>
                <input asp-for="FechaNacimiento" class="form-control mt-2" type="date" max="@DateTime.Now.AddYears(-18).ToString("yyyy-MM-dd")" />
                <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telefono" class="control-label mt-3">Teléfono</label>
                <input asp-for="Telefono" class="form-control mt-2" />
                <span asp-validation-for="Telefono" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="UsuarioPac" />
            <div class="form-group">
                <label asp-for="Contraseña" class="control-label mt-3">Contraseña</label>
                <input asp-for="Contraseña" class="form-control mt-2" />
                <span asp-validation-for="Contraseña" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary mt-3" />
            </div>
        </form>
    </div>
</div>
<hr />
<div>
    <a asp-action="Index" class="btn btn-success">Regresar a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
